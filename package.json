{
  "name": "express-api-template",
  "version": "1.0.0",
  "description": "Boilerplate for ES6 express-api",
  "main": "index.js",
  "scripts": {
    "start:dev": "DEBUG=server* nodemon ./server/main.js",
    "start": "node ./server/main.js",
    "lint": "./node_modules/.bin/eslint ./server/**/*.js",
    "lint:fix": "./node_modules/.bin/eslint ./server/**/*.js --fix",
    "test": "./node_modules/.bin/jest",
    "test:coverage": "./node_modules/.bin/jest --coverage",
    "generate": "./node_modules/.bin/plop --plopfile generators/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nslobodian/express-api-boilerplate"
  },
  "author": "nslobodian",
  "license": "MIT",
  "homepage": "https://github.com/nslobodian/express-api-boilerplate#readme",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "date-fns": "^1.28.5",
    "debug": "^2.6.8",
    "express": "^4.15.3",
    "express-rate-limit": "^2.9.0",
    "express-validation": "^1.0.2",
    "i18n-2": "^0.7.2",
    "joi": "^10.5.2",
    "jsonwebtoken": "^7.4.1",
    "latinize": "^0.4.0",
    "lodash.merge": "^4.6.0",
    "mongoose": "^4.10.4",
    "object-hash": "^1.1.8",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "pretty-error": "^2.1.0",
    "ramda": "^0.24.1",
    "raven": "^2.1.0",
    "sha256": "^0.2.0",
    "sharp": "^0.18.2",
    "swagger-jsdoc": "^1.9.5",
    "swagger-ui-express": "^2.0.15",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "handlebars-helper-pluralize": "^1.0.3",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "plop": "^2.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "server/**/*.{js}"
    ]
  }
}
